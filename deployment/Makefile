# Makefile for Perfect Consolidated Bot

.PHONY: test pytest run bot help

# Default target
help:
	@echo "Available targets:"
	@echo "  test     - Run all tests"
	@echo "  pytest   - Run pytest suite"
	@echo "  run      - Run the trading bot"
	@echo "  install  - Install dependencies"
	@echo "  clean    - Clean up generated files"

# Run all tests
test:
	@echo "ðŸ§ª Running all tests..."
	python tests/test_risk.py

# Run pytest suite (if pytest is installed)
pytest:
	@echo "ðŸ§ª Running pytest suite..."
	pytest -q tests/

# Run the trading bot
run:
	@echo "ðŸš€ Starting Perfect Consolidated Bot..."
	python PERFECT_CONSOLIDATED_BOT.py

# Install dependencies
install:
	@echo "ðŸ“¦ Installing dependencies..."
	pip install numpy httpx cryptography eth-account

# Clean up generated files
clean:
	@echo "ðŸ§¹ Cleaning up..."
	find . -name "*.pyc" -delete
	find . -name "__pycache__" -type d -exec rm -rf {} + 2>/dev/null || true
	find . -name "*.log" -delete
	find . -name "*.tmp" -delete

# Development helpers
dev-setup: install
	@echo "ðŸ”§ Development setup complete"

# Quick test run
quick-test:
	@echo "âš¡ Quick test run..."
	python -c "from PERFECT_CONSOLIDATED_BOT import AdvancedRiskManager; import logging; rm = AdvancedRiskManager(logging.getLogger('test')); print('âœ… Risk manager initialized successfully')" 